// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  password  String
  role      String
  Deposits  Deposit[]
}

model Client {
  id        String    @id @default(uuid())
  name      String    @unique
  phone     String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  Order     Order[]
  Deposits  Deposit[]
}

model Product {
  id        String      @id @default(uuid())
  name      String
  price     Int
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  deletedAt DateTime?
  Variant   Variant[]
  OrderItem OrderItem[]
}

model Variant {
  id        String    @id @default(uuid())
  name      String
  price     Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  Product   Product?  @relation(fields: [productId], references: [id])
  productId String?
}

model Order {
  id        String      @id @default(uuid())
  userId    String
  user      Client      @relation(fields: [userId], references: [id])
  amount    Int
  total     Int
  status    String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  deletedAt DateTime?
  Payments  Payments[]
  OrderItem OrderItem[]
}

model OrderItem {
  id        String    @id @default(uuid())
  orderId   String
  order     Order     @relation(fields: [orderId], references: [id])
  productId String
  product   Product   @relation(fields: [productId], references: [id])
  amount    Int
  price     Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Payments {
  id        String    @id @default(uuid())
  orderId   String
  order     Order     @relation(fields: [orderId], references: [id])
  value     Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Deposit {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  value     Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  Clients   Client?   @relation(fields: [clientsId], references: [id])
  clientsId String?
}
